<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TagihanFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/layer_count"
        android:id="@+id/layer1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count"
        android:id="@+id/textCount"
        app:layout_constraintTop_toTopOf="@id/layer1"
        app:layout_constraintStart_toStartOf="@id/layer1"
        app:layout_constraintEnd_toEndOf="@id/layer1"
        app:layout_constraintBottom_toBottomOf="@id/layer1"
        android:layout_marginEnd="150dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 L/m"
        app:layout_constraintTop_toTopOf="@id/layer1"
        app:layout_constraintStart_toEndOf="@id/layer1"
        app:layout_constraintBottom_toBottomOf="@id/layer1"
        app:layout_constraintEnd_toEndOf="@id/layer1"
        app:layout_constraintStart_toStartOf="@id/layer1"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginStart="119dp"
        android:id="@+id/count"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/textCount"
        app:layout_constraintTop_toBottomOf="@id/textCount"
        android:id="@+id/textVolume"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countVol"
        android:text="0 L"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/textVolume"
        app:layout_constraintStart_toStartOf="@id/count"/>


</androidx.constraintlayout.widget.ConstraintLayout>