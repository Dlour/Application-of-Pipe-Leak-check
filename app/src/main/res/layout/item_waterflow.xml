<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bckgrndbtn2"
        android:layout_gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Counter A"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/ratecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textRate"
            android:layout_marginStart="38dp"
            android:fontFamily="@font/poppins_regular"
            android:text="120 L/m"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textVolumeA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratecount"
            android:layout_marginStart="38dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Volume"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textVolumeA"
            android:layout_marginStart="38dp"
            android:fontFamily="@font/poppins_regular"
            android:text="0 L"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tetesan"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="50dp"

            />


    </RelativeLayout>


</LinearLayout>
